// Character List
#characters
	border-spacing 10px
	border-collapse collapse
	width 100%
	position relative

	.btn-sm
		padding 8px 15px
		position absolute
		top 0
		right 0

	tr:nth-child(odd)
		background #E6E1D6

	td
		padding 22px 20px 15px 10px
		span.name
			display block
			font-size 15px
			line-height 1.1
		span.info, a
			display block
			font-weight 700
			opacity .7
			font-size 11px
			font-family lato
			text-transform uppercase
			letter-spacing 1px
			&.time
				opacity 1
		a
			opacity 1
			text-align center
			padding 5px 3px
			border-radius 3px
			color darken(sandybrown, 10%)

		&:first-child
			width 70%
			padding-left 20px

// Character Form Styles (Create / Edit)
#character-form
	margin-top 60px
	background white

	h1
		margin-bottom 50px

	label
		display block
		font-family lato
		color #B5B5B5
		text-transform uppercase
		letter-spacing 1px
		font-size 1rem
		margin-bottom 50px

		&.top
			margin 0 0 10px 0

	.char-input
		width 100%
		margin 0 0 7px 0
		padding 6px 8px
		line-height 1.4
		height 32px
		color #4D4D4D
		&:focus
			border 1px solid #DB8A00
			outline none
			~ label
				color #DB8A00

	.char-ability
		width 66%

	.ability-target
		width 31%
		color #ccc
		text-align center
		position relative
		left -5px

	.char-select
		background none
		border-radius 0
		-webkit-appearance none

		option.selected
			opacity .3

	.section
		padding-bottom 100px
		margin-bottom 80px
		border-bottom 1px solid #ddd

		.continue
			margin-top 100px
			text-align center

		.section-title h1
			margin-bottom 60px
			font-size 22px
			text-transform uppercase
			font-weight 800

		.image-upload
			margin-top 20px

	button
		background #DB8A00
		&:hover
			background #333

	.character-info-panel
		background #f4f4f4
		position relative
		padding 21px
		margin-bottom 25px

		&:last-child
			margin 0

		p
			margin-bottom 0

		.character-info
			float left
			display block
			width 100%
			margin-bottom 13px
			cursor default
			.info
				float left
				border-right 1px solid #DCDCDC
				padding 3px 18px 3px 13px
				&:first-child
					padding-left 0
				&:last-child
					border none
					padding-right 0
				&:hover
					span.title
						color #DB8A00

				// everything over 1200px (large screens)
				@media handheld, screen and (min-width: 1200px)
					padding 3px 45px 3px 20px
			span.title
				font-size .8rem
				text-transform uppercase
				color #9B9B9B
				display block
				margin-bottom 2px
			span.attr
				font-size 1.3rem
				letter-spacing .5

		.expand
			position absolute
			background #DB8A00
			right 0
			bottom 0
			padding 0
			width 21px
			height 21px
			text-align center

			i
				color white
				font-size 1.1rem
				position relative
				top 1px
				left 1px

			&:hover
				background #4D4D4D