// Character List 
#characters		
	border-spacing 10px		
	border-collapse collapse		
	width 100%		
	position relative		
		
	.btn-sm		
		padding 8px 15px		
		position absolute		
		top 0		
		right 0		
		
	tr:nth-child(odd)		
		background #E6E1D6		

	td		
		padding 22px 20px 15px 10px		
		span.name		
			display block		
			font-size 15px		
			line-height 1.1		
		span.info, a		
			display block		
			font-weight 700		
			opacity .7		
			font-size 11px		
			font-family lato		
			text-transform uppercase		
			letter-spacing 1px		
			&.time		
				opacity 1		
		a		
			opacity 1		
			text-align center		
			padding 5px 3px		
			border-radius 3px		
			color darken(sandybrown, 10%)		

		&:first-child		
			width 70%		
			padding-left 20px

// Character Form Styles (Create / Edit)
#character-form
	margin-top 60px
	background white
	
	h1
		margin-bottom 50px
	
	label
		display block
		font-family lato
		color #B5B5B5
		text-transform uppercase
		letter-spacing 1px
		font-size 1rem
		margin-bottom 50px
	
	.char-input
		width 100%
		margin-bottom 8px
		border none
		border-bottom 1px solid #B5B5B5
		font-size 24px
		color #4D4D4D
		padding 0 1px 10px
		font-size 24px
		color #4D4D4D
		padding 0 1px 10px
		&:focus
			border-bottom 1px solid #DB8A00
			outline none
			
			~ label
				color #DB8A00
	// .char-text
	// 	&:focus
	// 		border-bottom 1px solid #DB8A00
	// 		outline none
			
	// 		~ label
	// 			color #DB8A00
	
	.char-select
		background none
		border-radius 0
		-webkit-appearance none
	
	.section
		padding-bottom 80px
		margin-bottom 100px
		border-bottom 1px solid #B5B5B5
	
	button
		background #DB8A00
	
	.character-info-panel
		background #f4f4f4
		position relative
		padding 21px
		margin-bottom 25px
		
		&:last-child
			margin 0
		
		.character-info
			float left
			display block
			width 100%
			margin-bottom 13px
			cursor default
			.info
				float left
				border-right 1px solid #DCDCDC
				padding 3px 45px 3px 20px
				&:first-child
					padding-left 0
				&:last-child
					border none
					padding-right 0
				&:hover
					span.title
						color #DB8A00
			span.title
				font-size .8rem
				text-transform uppercase
				color #9B9B9B
				display block
				margin-bottom 4px
			span.attr
				font-size 1.3rem
				letter-spacing .5
			
		
		.expand
			position absolute
			background #DB8A00
			right 0
			bottom 0
			
			&.rect
				padding 1px 5px 0 10px
				span
					font-size .84rem
					text-transform uppercase
					color white
					letter-spacing 1px
					position relative
					bottom 1px
					right 1px
			
			&.square
				padding 0
				width 21px
				height 21px
				text-align center
			
			i
				color white
				font-size 1.2rem