// Character List 
#characters		
	border-spacing 10px		
	border-collapse collapse		
	width 100%		
	position relative		
		
	.btn-sm		
		padding 8px 15px		
		position absolute		
		top 0		
		right 0		
		
	tr:nth-child(odd)		
		background #E6E1D6		

	td		
		padding 22px 20px 15px 10px		
		span.name		
			display block		
			font-size 15px		
			line-height 1.1		
		span.info, a		
			display block		
			font-weight 700		
			opacity .7		
			font-size 11px		
			font-family lato		
			text-transform uppercase		
			letter-spacing 1px		
			&.time		
				opacity 1		
		a		
			opacity 1		
			text-align center		
			padding 5px 3px		
			border-radius 3px		
			color darken(sandybrown, 10%)		

		&:first-child		
			width 70%		
			padding-left 20px

