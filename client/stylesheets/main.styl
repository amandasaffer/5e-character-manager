/* CSS declarations go here */
@import url('http://fonts.googleapis.com/css?family=Lato:300,400,700,900,300italic,400italic,700italic,900italic|Merriweather:400,400italic,700,700italic,900,900italic');

lato = "Lato", sans-serif
merri = "Merriweather", serif

html
	overflow hidden
	height 100%

body
	font-size 16px
	background #F1EBE0
	overflow auto
	height 100%

/* Header
 * Lorem ipsum dolor sit amet
 */

#main-yield
	padding 0
#body-wrapper
	margin-top 100px

nav.navbar
	height 70px
	font-family lato

	&.home-page
		background transparent
		border none

		a.navbar-brand
			color white
			opacity .8

		.navbar-nav
			display none

	.navbar-header
		height 70px
		padding-top 10px

	.navbar-collapse
		padding-top 10px

	ul
		font-family lato
		font-size 16px
		line-height 1

	a.navbar-brand
		font-weight 700
		font-size 24px

		strong
			opacity .5
			font-weight 900

#main-hero
	height 100vh
	background url('/images/ToDKeyArt1.jpg')
	background-size cover
	background-position 50% 40%
	text-align center

	h1
		color white
		opacity .95
		line-height 1.2
		text-transform uppercase
		font-weight 900
		margin 0 0 30px 0
		letter-spacing 1px
		font-size 66px
	span
		font-family lato
		text-transform uppercase
		margin 0 18px 0
		color #fff
		opacity .45
		font-size 12px
		font-weight 400
		letter-spacing 1px

		i
			opacity .5
			margin-left 3px
			margin-right 2px

	.btn
		font-size 15px
		font-weight 400
		padding 15px 33px 14px
		letter-spacing 2px
		border-radius 39px

		i
			opacity .4
			margin-right 2px

		&:active
				position relative
				top 1px

		&.signup
			background lighten(#E35720, 5%)
			border 1px solid #E35720
			box-shadow 0px 1px 1px #53381D

			&:hover
				background lighten(#E35720, 15%)
				border 1px solid lighten(#E35720, 10%)

		&.login
			background darken(#333, 5%)
			border 1px solid darken(#333, 7%)
			// box-shadow 0px 1px 2px #111
			color #eee

			&:hover
				background #333
				border 1px solid #333

	.welcome
		padding-top 38vh

	.create-acc, .login-form
		text-align left
		padding-top 35vh

		h3
			color white
			text-align center
			margin-bottom 10px

		span
			margin-left 0
			padding-left 0
			cursor pointer
			display inline-block
			margin-bottom 10px

			&:hover
				opacity .7

		#create-new-account, #login-form
			margin-top 5px
			margin-bottom 10px

			input[type=text], input[type=password]
				background rgba(0,0,0,0.35)
				padding 24px 25px 23px
				font-size 16px
				border-radius 25px
				border none
				color #fff
				margin-bottom 20px
				font-family lato
				font-weight 300

			input::-webkit-input-placeholder
				color #ddd
				border none
				box-shadow none
				text-shadow none
				opacity .67


			.checkbox
				margin-top 0
				margin-left 5px

				// everything over 1200px (large screens)
				@media handheld, screen and (min-width: 1200px)
					margin-left 30px
					margin-bottom 0

			label
				font-family lato
				color #fff

				span
					opacity .9
					font-size 14px
					font-weight 300
					display block
					text-transform none
					margin 0 20px 0 4px

			button[type=submit]
				padding 14px 25px
				font-size 14px
				border-radius 25px
				background lighten(#c55124, 5%)
				border none
				display block
				width 100%
				color #fff

				&:hover
					background #c55124

				&:focus
					outline 0

	.screen
		height 100%
		width 100%
		background rgba(25, 25, 25, .15)

	.scroll-down
		position absolute
		bottom 30px
		left 0
		right 0
		opacity .7

		i
			color white
