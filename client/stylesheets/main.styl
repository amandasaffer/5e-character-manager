/* CSS declarations go here */
@import url('http://fonts.googleapis.com/css?family=PT+Sans:400,700,400italic,700italic|PT+Serif:400,700,400italic,700italic');

body
	font-size 16px
	background url('/images/green_cup.png')
	// background url('/images/concrete_seamless.png')

p
	margin 0 0 30px
	line-height 1.65

	&.clean
		margin 0 0 10px

ul.group-list
	margin 0 0 30px

	i
		color red
		font-size 14px

		&:hover
			cursor pointer

#edit-profile
	margin 30px 0 0

	input[type=password]
		margin 0 0 10px


form.create-character
	label
		font-family "PT Serif", serif
	input[type=text]
		height 34px
		padding-top 7px
	input[type=text], select, textarea
		background-color #d1d4c9
		box-shadow inset 0 4px 4px -4px darken(#9da291, 10%)
		border 1px solid darken(#9da291, 10%)
		font-family "PT Sans", sans-serif
	
	h5
		font-family "PT Serif", serif
		font-size 32px
		opacity .5
		margin 0 0 15px 0
		display block

	.input-group
		&.input-group-sm
			.input-group-addon
				padding 7px 10px
		.input-group-addon
			// background darken(#9ba08d, 2%)
			// border-color darken(#9ba08d, 15%)
			background  darken(#d1d4c9, 7%)
			border-color darken(#9ba08d, 1%)
			color darken(#9ba08d, 45%)
			// box-shadow inset 0 3px 3px -3px white

.form-horizontal
	label
		margin 0 0 10px 0
	.form-group
		margin-top 40px
		.ability-scores, .saving-throws, .general-proficiencies
			.input-group
				margin-bottom 10px

				span.fixed
					width 50px

					&.thin
						width 35px
					&.fat
						width 65px
		
		.general-proficiencies
			.input-group
				span.fixed
					&.prof-name
						width 180px
						text-align left
		
		span.instruction
			display block
			font-size 13px
			line-height 1.3
			margin 10px 0
