/* CSS declarations go here */

body
	font-size 16px
	// background url('/images/green_cup.png')
	background url('/images/concrete_seamless.png')

p
	margin 0 0 30px
	line-height 1.65

	&.clean
		margin 0 0 10px

ul.group-list
	margin 0 0 30px

	i
		color red
		font-size 14px

		&:hover
			cursor pointer

#edit-profile
	margin 30px 0 0

	input[type=password]
		margin 0 0 10px

// .form-inline

.form-horizontal
	label
		margin 0 0 10px 0
	.form-group
		margin-top 40px
		.ability-scores, .saving-throws, .general-proficiencies
			.input-group
				margin-bottom 10px

				span.fixed
					width 50px

					&.thin
						width 35px
					&.fat
						width 65px
		
		.general-proficiencies
			.input-group
				span.fixed
					&.prof-name
						width 180px
						text-align left
		
		span.instruction
			display block
			font-size 13px
			line-height 1.3
			margin 10px 0
